{
  "name": "reactron",
  "version": "0.13.0",
  "description": "Dynamic Electron & React Module Loader",
  "keywords": [
    "electron",
    "react",
    "dynamic",
    "modules"
  ],
  "author": {
    "name": "Martin Pietschmann",
    "email": "schirkan@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/schirkan/reactron"
  },
  "bugs": {
    "url": "https://github.com/schirkan/reactron/issues"
  },
  "main": "main.js",
  "proxy": "http://localhost:5000",
  "scripts": {
    "debug": "run-p watch:css debug:react debug:electron",
    "debug:react": "react-scripts start",
    "debug:electron": "npm run build:electron && set NODE_ENV=development& electron .",
    "start": "set NODE_ENV=production& electron .",
    "build": "npm run build:electron && npm run build:css && npm run build:react",
    "build:react": "react-scripts build",
    "build:electron": "rimraf ./dist && tsc -p ./tsconfig.electron.json",
    "watch:electron": "rimraf ./dist && tsc -p ./tsconfig.electron.json -w",
    "build:css": "node-sass-chokidar src/ -o src/",
    "watch:css": "npm run build:css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "test": "react-scripts test --env=jsdom"
  },
  "dependencies": {
    "electron": "^4.0.1",
    "electron-shutdown-command": "0.0.8",
    "electron-store": "^2.0.0",
    "express": "^4.16.4",
    "moment": "^2.23.0",
    "moment-timezone": "^0.5.23",
    "numeral": "^2.0.6",
    "react-responsive-carousel": "^3.1.45",
    "systemjs": "^2.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.12",
    "@fortawesome/free-brands-svg-icons": "^5.6.3",
    "@fortawesome/free-regular-svg-icons": "^5.6.3",
    "@fortawesome/free-solid-svg-icons": "^5.6.3",
    "@fortawesome/react-fontawesome": "0.1.0-11",
    "@schirkan/reactron-interfaces": "^0.9.1",
    "@types/classnames": "^2.2.7",
    "@types/electron-store": "^1.3.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.12",
    "@types/moment-timezone": "^0.5.10",
    "@types/node": "^10.12.18",
    "@types/numeral": "0.0.25",
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "@types/react-fontawesome": "^1.6.4",
    "@types/react-router-dom": "^4.3.1",
    "@types/systemjs": "^0.20.6",
    "@types/uuid": "^3.4.4",
    "classnames": "^2.2.6",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-markdown": "^4.0.6",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "rimraf": "^2.6.3",
    "typescript": "^3.2.2"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
